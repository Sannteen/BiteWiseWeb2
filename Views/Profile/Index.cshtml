@model BiteWiseWeb2.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FullName" class="control-label">Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="control-label">Age</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight" class="control-label">Weight</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Height" class="control-label">Height</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label">Gender</label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FitnessGoal" class="control-label">Fitness Goal</label>
        <input asp-for="FitnessGoal" class="form-control" />
        <span asp-validation-for="FitnessGoal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActivityLevel" class="control-label">Activity Level</label>
        <input asp-for="ActivityLevel" class="form-control" />
        <span asp-validation-for="ActivityLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfilePicturePath" class="control-label">Profile Picture</label>
        <input asp-for="ProfilePicturePath" type="file" class="form-control" />
        <span asp-validation-for="ProfilePicturePath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Profile</button>
</form>

