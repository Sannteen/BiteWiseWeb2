@model ProfileViewModel
@{
    ViewBag.Title = "Your Profile";
}

<h2>Your Profile</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Index" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control">
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" type="number" step="0.1" />
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" type="number" step="0.1" />
    </div>

    <div class="form-group">
        <label asp-for="FitnessGoal"></label>
        <input asp-for="FitnessGoal" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ActivityLevel"></label>
        <input asp-for="ActivityLevel" class="form-control" />
    </div>

    <hr />
    <h4>Change Password</h4>

    <div class="form-group">
        <label asp-for="CurrentPassword"></label>
        <input asp-for="CurrentPassword" class="form-control" type="password" />
    </div>

    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control" type="password" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
