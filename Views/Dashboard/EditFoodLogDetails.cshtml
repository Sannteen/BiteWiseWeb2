@model BiteWiseWeb2.Models.FoodLog

@{
    ViewData["Title"] = "Edit Food Log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow p-4 text-muted-turquoise">
        <h2>Edit Food Log</h2>
        <form asp-action="EditLog" method="post">
            <input type="hidden" asp-for="RecordId" />
            <div class="mb-3">
                <label asp-for="FoodName" class="form-label">Food Name</label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CalsConsumed" class="form-label">Calories</label>
                <input asp-for="CalsConsumed" class="form-control" type="number" />
                <span asp-validation-for="CalsConsumed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Date" class="form-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success rounded-pill" style="background-color: #74c69d;">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary ms-2 rounded-pill">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
