@model BiteWiseWeb2.Models.FoodLog
@{
    ViewData["Title"] = "Food Log Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow rounded p-4 text-muted-turquoise">
        <h3 class="text-med-turquoise">Food Log Details</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Food Name</dt>
            <dd class="col-sm-9">@Model.FoodName</dd>
            <dt class="col-sm-3">Calories</dt>
            <dd class="col-sm-9">@Model.CalsConsumed kcal</dd>
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>
            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.User?.Name</dd>
        </dl>
        <div>
            <a asp-action="FoodLogEdit" asp-route-id="@Model.RecordId" class="btn btn-warning rounded-pill">Edit</a>
            <a asp-action="Index" class="btn btn-lime-green rounded-pill">Back to Dashboard</a>
        </div>
    </div>
</div>